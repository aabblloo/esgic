{% extends 'base.html.twig' %}

{% block title %}{{ titre }}{% endblock %}
{% block titre %}{{ titre }}{% endblock %}

{% block body %}

    <div class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="btn btn-link py-0" href="{{ path('autrepaiement_new') }}">
                <i class="fa fa-euro-sign"></i>
                Enregistrer un paiement
            </a>
        </li>
    </div>

    <table class="table table-striped table-hover" id="myTable">
        <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Montant</th>
            <th>Banque</th>
            <th>Mode op√©ration</th>
            <th>Etudiant</th>
            <th>Site</th>
            <th>Date saisie</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for autrePaiement in autrePaiements %}
            <tr>
                <td>
                    {{ autrePaiement.date|dateFr }}
                </td>
                <td>{{ autrePaiement.type }}</td>
                <td>{{ autrePaiement.montant|formatFr }}</td>
                <td>{{ autrePaiement.banque ? autrePaiement.banque.nom }}</td>
                <td>{{ autrePaiement.modeOperation }}</td>
                <td>{{ autrePaiement.etudiant.prenomNomMle }}</td>
                <td>{{ autrePaiement.site }}</td>
                <td>{{ autrePaiement.createAt|dateFr }}</td>

                <td class="text-right">
                    <a href="{{ path('autre_paiement_synthese_print',{'id':autrePaiement.id}) }}"
                       class="btn btn-link py-0" target="_blank">
                        <i class="fa fa-print"></i>
                        Imprimer
                    </a>
                    <a href="{{ path('autrepaiement_show',{'id':autrePaiement.id}) }}" class="btn btn-link py-0">
                        <i class="fa fa-file-alt"></i>
                        Afficher
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div id="langue-id" data-value="{{ absolute_url(asset('DataTables/i18n/French.json')) }}"></div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            var langue = document.getElementById('langue-id').dataset.value;

            $('#gestion_scolaire').addClass('active');
            $('#autre_paiement_index').addClass('active');

            $('#myTable').DataTable({
                order: [],
                language: {url: langue},
            });

        });
    </script>
{% endblock %}