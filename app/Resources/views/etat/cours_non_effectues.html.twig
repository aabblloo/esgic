{% extends "base_print.html.twig" %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block body %}
    <h5>{{ titre }}</h5>

    <h6>
        Année scolaire :
        <span class="value font-weight-bold">
            {{ anScolaire.nom }}
        </span>
    </h6>

    {% if site is defined and site is not null %}
        <h6>
            Site :
            <span class="value font-weight-bold">
            {{ site.nom }}
        </span>
        </h6>
    {% endif %}

    <table class="table table-bordered table-striped table-sm" style="margin-top: 20px">

        <thead class="bg-info text-white">
            <tr>
                <th style="width: 10%">Classe</th>
                <th style="width: 20%">Matiere</th>
                <th style="width: 20%">Semaine</th>
                <th style="width: 10%">Jour</th>
                <th style="width: 10%">Debut</th>
                <th style="width: 10%">fin</th>
                <th style="width: 20%">Prof</th>
            </tr>
        </thead>

        {# <tfoot>
            <tr>
                <th colspan="3">Total</th>
                <th class="value text-right"
                    style="padding-right: 20px">{{ total|formatFr }}</th>
                <th></th>
            </tr>
        </tfoot> #}

        <tbody class="value">

            {% for coursNF in coursNonEffectues %}
                <tr>
                    <td>{{ coursNF.classe.code}}</td>
                    <td>{{ coursNF.matiere.nom }}</td>
                    <td>{{ coursNF.libelleSemaine }}</td>
                    <td>{{ coursNF.jour  }}</td>
                    <td >{{ coursNF.debut | date('H:i') }}</td>
                    <td>{{ coursNF.fin | date('H:i')}}</td>
                    <td>{{ coursNF.prof.prenom }} {{ coursNF.prof.nom }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de résultat</td>
                </tr>
            {% endfor %} 
        </tbody>

    </table>
{% endblock %}