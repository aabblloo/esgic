{% extends 'base.html.twig' %}

{% block title %}Paramètres index
{% endblock %}
{% block titre %}Liste des Paramètres
{% endblock %}

{% block body %}

    <div class="breadcrumb">

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('parametres_new') }}">
                <i class="fa fa-toolbox"></i>
                Nouveau Paramètre
            </a>
        {% endif %}

    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Clé</th>
            <th>Valeur</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for parametre in parametres %}
            <tr>
                <td>{{ parametre.cle }}</td>
                <td>{{ parametre.valeur }}</td>
                <td class="text-right">
                    <a href="{{ path('parametres_edit', {'id': parametre.id}) }}">
                        <i class="fa fa-edit"></i>
                        Editer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#admin").addClass("active");
            $("#param_index").addClass("active");
        });
    </script>
{% endblock %}
