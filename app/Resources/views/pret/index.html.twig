{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}

    <div class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="btn btn-link py-0 px-0" href="{{ path('pret_new') }}">
                <i class="fa fa-plus"></i>
                Enregistrer un nouveau prêt
            </a>
        </li>
    </div>

    <table class="table table-striped table-hover" id="myTable">
        <thead>
        <tr>
            <th style="width: 20%;">Date</th>
            <th style="width: 20%;">Montant</th>
            <th>Payé</th>
            <th>Reste</th>
            <th>Professeur</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for pret in prets %}
            <tr>
                <td>
                    {{ pret.date|dateFr }}
                </td>
                <td>{{ pret.montant|number_format(0, ',', ' ') }}</td>
                <td class="text-success">
                    {{ pret.totalRemboursement|number_format(0, ',', ' ') }}
                </td>
                <td class="text-danger">
                    {{ (pret.montant - pret.totalRemboursement)|number_format(0, ',', ' ') }}
                </td>
                <td>{{ pret.professeur.prenomNom }}</td>
                <td class="text-right">
                    <a href="{{ path('pret_show', { 'id' : pret.id }) }}" class="btn btn-link py-0">
                        <i class="fa fa-file-alt"></i>
                        Afficher
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div id="langue-id" data-value="{{ absolute_url(asset('DataTables/i18n/French.json')) }}"></div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            var langue = document.getElementById('langue-id').dataset.value;
            $('#autre').addClass('active');
            $('#pret_index').addClass('active');

            $('#myTable').DataTable({
                order: [],
                language: {url: langue},
            });
        });
    </script>
{% endblock %}