{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}

    <div class="breadcrumb">
        <a class="btn btn-link" href="{{ path('depense_new') }}">
            <i class="fa fa-sm fa-dollar-sign"></i>
            Enregistrer une dépense
        </a>
    </div>

    <div class="row align-items-center justify-content-center" style="margin-bottom: 20px">
        <div class="col-12">
            {{ form_start(form) }}
            <div class="row">

                <div class="col-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="">Type</span>
                        </div>
                        {{ form_widget(form.type) }}
                    </div>
                </div>

                <div class="col-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="">Site</span>
                        </div>
                        {{ form_widget(form.site) }}
                    </div>
                </div>

                <div class="col-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="">du</span>
                        </div>
                        {{ form_widget(form.debut) }}
                    </div>
                </div>

                <div class="col-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="">au</span>
                        </div>
                        {{ form_widget(form.fin) }}
                    </div>
                </div>

                <div class="col-1">
                    <button class="btn btn-success btn-block">OK</button>
                </div>

            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <table id="myTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Réf.</th>
                <th>Libellé</th>
                <th>Montant</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for depense in depenses %}
                <tr>
                    <td>{{ depense.date | dateFr }}</td>
                    <td>{{ depense.type }}</td>
                    <td>{{ depense.ref }}</td>
                    <td>{{ depense.libelle }}</td>
                    <td style="text-align: right; padding-right: 20px">{{ depense.montant | formatFr }}</td>
                    <td class="text-right">
                        <a href="{{ path('depense_edit', {'id': depense.id}) }}" class="btn btn-link py-0">
                            <i class="fa fa-edit"></i>
                            Modifier
                        </a>
                        {#<a href="{{ path('depense_print', {'id': depense.id}) }}" class="btn btn-link py-0">#}
                        {#    <i class="fa fa-print"></i>#}
                        {#    Imprimer#}
                        {#</a>#}
                        <a href="{{ path('depense_delete', {'id': depense.id}) }}" class="btn btn-link py-0 text-danger">
                            <i class="fa fa-trash-alt "></i>
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {% if is_granted('ROLE_DIRECTEUR') %}
        {% if total | length > 0 %}
            <div class="row justify-content-center">
                <div class="col2">
                    <h5>
                        <b>Total</b>
                        :
                        <span class="value">{{ total | formatFr }}</span>
                    </h5>
                </div>
            </div>
        {% endif %}
    {% endif %}

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('chosen/chosen.min.css') }}">
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.min.js') }}"></script>
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            $('#autre').addClass('active');
            $('#depense_index').addClass('active');

            $(".chosen-select").chosen({allow_single_deselect: true, no_results_text: "Option non trouvée !", disable_search_threshold: 10, inherit_select_classes: true});

            $('#myTable').DataTable({
                order: [],
            });

        });
    </script>
{% endblock %}