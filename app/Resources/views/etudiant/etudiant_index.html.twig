{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}

    <div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <table class="table table-borderless table-condensed-">
            <tr valign="middle">
                <td>
                    {{ form_widget(form.classe) }}
                    {{ form_errors(form.classe) }}
                </td>
                <td>
                    {{ form_widget(form.anScolaire) }}
                    {{ form_errors(form.anScolaire) }}
                </td>
                <td>
                    {{ form_widget(form.site) }}
                    {{ form_errors(form.site) }}
                </td>
                <td>
                    {{ form_widget(form.lettre) }}
                    {{ form_errors(form.lettre) }}
                </td>
                <td>
                    <button class="btn btn-sm btn-primary">Rechercher</button>
                </td>
            </tr>
        </table>
        {{ form_end(form) }}
        {{ form_end(form) }}
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date naiss.</th>
                <th>Lieu naiss.</th>
                <th>Téléphone</th>
                <th>Matricule</th>
                <th>Photo</th>
            </tr>
        </thead>

        <tbody>

            {% for etd in etudiants %}
                <tr>
                    <td>
                        <a href="{{ path('etudiant_show', {'id': etd.id}) }}">
                            {{ etd.prenom }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('etudiant_show', {'id': etd.id}) }}">
                            {{ etd.nom }}
                        </a>
                    </td>
                    <td>{{ etd.dateNaiss|dateFr }}</td>
                    <td>{{ etd.lieuNaiss }}</td>
                    <td>{{ etd.telephone }}</td>
                    <td>{{ etd.matricule }}</td>
                    <td style="width: 50px;">
                        <a href="{{ path('etudiant_show', {'id': etd.id}) }}">
                            <img class="img-thumbnail" src="{{ asset('images/etudiants/'~etd.photoDefault) }}" alt="Photo">
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Pas de résultat</td>
                </tr>
            {% endfor %}

        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('chosen/chosen.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.js') }}"></script>

    <script>
        $(function () {
            $("#gestion_scolaire").addClass("active");
            $("#etudiant_index").addClass("active");

            $(".chosen-select").chosen({
                allow_single_deselect: true, no_results_text: "Option non trouvée !",
                width: "100%",
            });
        });
    </script>
{% endblock %}
