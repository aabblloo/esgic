{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% set titre = 'Cr√©ation nouveau site' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-4">
            <table class="table table-borderless table-hover">
                <tr>
                    <td class="p-0" style="width:40%"></td>
                    <td class="p-0"></td>
                </tr>

                {{ form_row(form.nom) }}

                <tr>
                    <td></td>
                    <td>
                        <button class="btn btn-primary ">
                            <i class="fa  fa-save"></i>
                            Enregistrer
                        </button>

                        <a href="{{ path('site_index') }}" class="btn btn-primary ">
                            <i class="fa  fa-arrow-left"></i>
                            Annuler
                        </a>

                    </td>
                </tr>

            </table>
        </div>
    </div>

    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('#admin').addClass('active');
            $('#site_index').addClass('active');
        });
    </script>
{% endblock %}