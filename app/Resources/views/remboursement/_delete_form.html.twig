<form method="post" action="{{ path('remboursement_delete', {'id': remboursement.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cet élément ?');" class="d-inline">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ remboursement.id) }}">
    <button class="btn btn-link py-0 text-danger">
        <i class="fa fa-trash-alt"></i>
        Supprimer
    </button>
</form>
