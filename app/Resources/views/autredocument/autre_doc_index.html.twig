{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    liste des documents
{% endblock %}

{% block titre %}
    Liste des documents
{% endblock %}

{% block body %}
    <div class="breadcrumb">
        <a class="btn btn-link" href="{{ path('autre_doc_new') }}">
            <i class="fa  fa-file-pdf"></i>
            Ajouter un document
        </a>
    </div>

    <div class="row mt-1 mb-3 justify-content-center">
        {{ form_start(form, {'attr':{'class':'form-inline'}}) }}
        {{ form_errors(form) }}
        <div class="form-group mr-3">
            {{ form_row(form.type) }}
        </div>
        <div class="form-group mr-3">
            {{ form_row(form.debut) }}
        </div>
        <div class="form-group mr-3">
            {{ form_row(form.fin) }}
        </div>
        <div class="form-group mr-3">
            <button class="btn btn-primary ">Rechercher</button>
        </div>
        {{ form_end(form) }}
    </div>

    <table id="myTable" class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Date</th>
            <th>Titre</th>
            <th>Type</th>
            <th>Lien</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for doc in documents %}
            <tr>
                <td>{{ doc.titre }}</td>
                <td>
                    {{ doc.date|dateFr }}
                </td>
                <td>{{ doc.type }}</td>
                <td>
                    <a href="{{ asset('documents/'~doc.lien) }}" target="_blank">
                        Voir le fichier
                    </a>
                </td>
                <td class="text-right">
                    <a href="{{ path('autre_doc_edit', {'id': doc.id}) }}" class="btn btn-link py-0">
                        <i class="fa  fa-edit"></i>
                        Modifier
                    </a>
                    <a href="{{ path('autre_doc_delete', {'id': doc.id}) }}" class="btn btn-link py-0 text-danger">
                        <i class="fa  fa-trash-alt "></i>
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de document</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('chosen/chosen.min.css') }}">
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.js') }}"></script>
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            $("#autre").addClass("active");
            $("#autre_doc_index").addClass("active");

            $(".chosen-select").chosen({allow_single_deselect: true, no_results_text: "Option non trouv√©e !"});

            $('#myTable').DataTable({
                order: [],
            });

        });
    </script>
{% endblock %}
