{% extends 'base.html.twig' %}

{% block title %}Etudiant Paiement index
{% endblock %}

{% block titre %}
    Paiements de l'Etudiant∙e
    <span class="text-primary">{{ etudiant.prenomNomMle }}</span>
{% endblock %}

{% block body %}
    <div class="breadcrumb p-2">
        <a class="btn btn-outline-primary mr-1" href="{{ path('etudiant_show', {'id': etudiant.id}) }}">
            <i class="fas fa-file-alt"></i>
            Retour fiche etudiant∙e
        </a>

        <a class="btn btn-outline-primary mr-1" href="{{ path('etd_paie_new', {'id': etudiant.id}) }}">
            <i class="fas fa-file-alt"></i>
            Nouveau paiement
        </a>
    </div>

    {% for ec in etdClasses %}
        <p class="mt-3">
            <b>Année</b>
            :
            <span class="text-monospace mr-3">{{ ec.anScolaire.nom }}</span>
            <b>Classe</b>
            :
            <span class="text-monospace">{{ ec.classe.code }}</span>
        </p>
        <table class="table table-striped table-hover mb-5">
            <thead>
                <tr>
                    <th style="width: 15%">Montant</th>
                    <th style="width: 15%">Date</th>
                    <th style="width: 15%">Mode</th>
                    <th style="width: 20%">Réf.</th>
                    <th>Date saisie</th>
                    <th>Nature</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for p in ec.paiementsTotal %}
                    <tr>
                        <td>{{ p.montant|formatFr }}</td>
                        <td>{{ p.date|dateFr }}</td>
                        <td>
                            {{ p.banque.nom }}
                        </td>
                        <td>{{ p.ref }}</td>
                        <td>
                            {{ p.createAt ? p.createAt | date('d/m/Y H:i') : '' }}
                        </td>
                        <td>{{ p.nature }}</td>
                        <td nowrap class="text-right">
                            <a href="{{ path('etd_paie_edit', {'id': p.id}) }}" title="Editer" class="btn btn-link py-0">
                                <i class="fas fa-edit"></i>
                                Modifier
                            </a>
                            <a href="#" title="Imprimer" class="btn btn-link py-0" data-toggle="popover" title="Popover Header" data-content="<a href='{{ path('paiement_print', {'id': p.id}) }}' target='_blank'>Récu simple</a><br><a href='{{ path('paiement_synthese_print', {'id': p.id}) }}' target='_blank'>Réçu de synthèse</a>">
                                <i class="fas fa-print"></i>
                                Imprimer
                            </a>
                            <a href="{{ path('etd_paie_delete', {'id': p.id}) }}" title="Supprimer" class="btn btn-link py-0 text-danger">
                                <i class="fas fa-trash-alt "></i>
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    {% else %}
        <p>Pas de paiement enregistré</p>
    {% endfor %}

    <h4>Autres paiements</h4>
    <table class="table table-striped table-hover" id="myTable">
        <thead>
        <tr>
            <th style="width: 15%">Montant</th>
            <th style="width: 15%">Date</th>
            <th style="width: 15%">Mode</th>
            <th style="width: 20%">Réf.</th>
            <th>Type</th>
            <th>Date saisie</th>
        </tr>
        </thead>
        <tbody>
        {% for autrePaiement in autre_paiements %}
            <tr>
                <td>{{ autrePaiement.montant|formatFr }}</td>
                <td>{{ autrePaiement.date|dateFr }}</td>
                <td>{{ autrePaiement.banque ? autrePaiement.banque.nom }}</td>
                <td>{{ autrePaiement.modeOperation }}</td>
                <td>{{ autrePaiement.type }}</td>
                <td>{{ autrePaiement.createAt|date('d-m-Y H:i') }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('#gestion_scolaire').addClass('active');
            $('#etudiant_index').addClass('active');
            $('[data-toggle="popover"]').popover({html: true});
        });
    </script>
{% endblock %}
