{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
    <span class="small">pour
        {{ etudiant.prenomNom }}</span>
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-4">
            <table class="table table-borderless table-hover table-sm">
                <tr>
                    <td style="width: 40%"></td>
                    <td></td>
                </tr>
                {{ form_row(form.anScolaire) }}
                {{ form_row(form.classe) }}
                {{ form_row(form.lettre) }}
                {{ form_row(form.montant) }}
                {{ form_row(form.fraisInscription) }}
                <tr>
                    <td></td>
                    <td>
                        <button class="btn btn-primary btn-sm">
                            <i class="fa fa-sm fa-save"></i>
                            Enregistrer
                        </button>

                        {% set url = path('etudiant_show', {'id': etudiant.id}) %}
                        {% if etudiantClasse.id is not null %}
                            {% set url = path('etudiant_classe_new', {'id': etudiant.id}) %}
                        {% endif %}

                        <a href="{{ url }}" class="btn btn-primary btn-sm">
                            <i class="fa fa-sm fa-arrow-left"></i>
                            Retour
                        </a>
                    </td>
                </tr>

            </table>
        </div>

        {% if etudiantClasses is defined %}
            <div class="col-8">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Année scolaire</th>
                            <th>Classe</th>
                            <th>Montant</th>
                            <th>Frais Inscr.</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="value">
                        {% for etc in etudiantClasses %}
                            <tr>
                                <td>{{ etc.anScolaire.nom }}</td>
                                <td>
                                    {{ etc.classe.code }}
                                    {{ etc.lettre }}
                                </td>
                                <td style="text-align: right">{{ etc.montant | formatFr }}</td>
                                <td style="text-align: right">{{ etc.fraisInscription | formatFr }}</td>
                                <td class="text-right">
                                    <a href="{{ path('etudiant_classe_edit',{'id': etc.id}) }}" class="btn btn-link py-0" title="Modifier">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a href="{{ path('etudiant_classe_delete',{'id': etc.id}) }}" class="btn btn-link py-0" title="Supprimer">
                                        <i class="fa fa-trash-alt text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        {% endif %}

    </div>
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('chosen/chosen.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.min.js') }}"></script>

    <script>
        $(function () {
            var attr = $('#gestion_scolaire').attr('class');
            $('#gestion_scolaire').attr('class', attr + ' active');
            attr = $('#etudiant_index').attr('class');
            $('#etudiant_index').attr('class', attr + ' active');

            $(".chosen-select").chosen({
                allow_single_deselect: true, no_results_text: "Option non trouvée !",
                // disable_search_threshold: 10,
            });
        });
    </script>
{% endblock %}
