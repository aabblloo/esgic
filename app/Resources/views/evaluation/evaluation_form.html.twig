{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-4">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <table class="table table-borderless table-hover">
                <tr>
                    <td style="width: 40%"></td>
                    <td></td>
                </tr>
                {{ form_row(form.anScolaire) }}
                {{ form_row(form.periode) }}
                {{ form_row(form.classe) }}
                {{ form_row(form.matiere) }}
                {{ form_row(form.site) }}
                <tr>
                    <td></td>
                    <td>
                        <button class="btn btn-primary ">
                            <i class="fa fa-save"></i>
                            Enregistrer
                        </button>

                        {% set url = path('evaluation_index') %}
                        {% if evaluation.id is not null %}
                            {% set url = path('evaluation_show', {'id':evaluation.id}) %}
                        {% endif %}
                        <a href="{{ url }}"
                           class="btn btn-primary ">
                            <i class="fa fa-arrow-left"></i>
                            Annuler
                        </a>
                    </td>
                </tr>
            </table>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('chosen/chosen.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('chosen/chosen.jquery.min.js') }}"></script>

    <script>
        $(function () {
            $("#gestion_bulletin").addClass("active");
            $("#evaluation_new").addClass("active");

            $(".chosen-select").chosen(
                    {
                        allow_single_deselect: true,
                        no_results_text: "Option non trouv√©e !",
                        //width: "100%",
                    }
            );

        });
    </script>
{% endblock %}