{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb">
        <a class="btn btn-link" href="{{ path('banque_new') }}">
            <i class="fa fa-building"></i>
            Enregistrer une banque
        </a>
    </div>

    <table class="table table-striped table-hover" id="myTable">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for banque in banques %}
                <tr>
                    <td>{{ banque.nom }}</td>
                    <td>{{ banque.code }}</td>
                    <td class="text-right">
                        <a href="{{ path('banque_edit', {'id': banque.id}) }}" class="btn btn-link py-0">
                            <i class="fa fa-edit"></i>
                            Afficher
                        </a>
                        <a href="{{ path('banque_delete', {'id': banque.id}) }}" class="btn btn-link py-0 text-danger">
                            <i class="fa fa-trash-alt"></i>
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% else %}
                <caption>Pas d'enregistrement</caption>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            $("#admin").addClass("active");
            $("#banque_index").addClass("active");

            $('#myTable').DataTable({
                order: [],
            });

        });
    </script>
{% endblock %}