{% extends 'base.html.twig' %}
{% form_theme form 'default/form_theme.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }} de la classe {{ classeMatiere.classe.code }}
{% endblock %}

{% block body %}
    <h4 class="text-danger">Voulez-vous supprimer la matière suivante ?</h4>

    {{ form_start(form, {'attr':{'id':'delete_form'}}) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-4">
            <table class="table table-sm table-borderless table-hover">
                <tbody>
                    <tr>
                        <td>Matière</td>
                        <td class="value">{{ classeMatiere.matiere.code }}</td>
                    </tr>
                    <tr>
                        <td>Coéfficient</td>
                        <td class="value">{{ classeMatiere.coeff }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <button type="button" id="delete_btn" class="btn btn-danger btn-sm">
                                <i class="fa fa-sm fa-trash-alt"></i>
                                Supprimer
                            </button>
                            <a href="{{ path('classe_matiere_new', {'id':classeMatiere.classe.id}) }}" class="btn btn-sm btn-success">
                                <i class="fa fa-sm fa-arrow-left"></i>
                                Annuler
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var attr = $("#admin").attr("class");
            $("#admin").attr("class", attr + " active");
            attr = $("#classe_index").attr("class");
            $("#classe_index").attr("class", attr + " active");

            $("#delete_btn").click(function () {
                if (confirm("Voulez-vous supprimer cette matière ?")) {
                    $("#delete_form").submit();
                }
            });
        });
    </script>
{% endblock %}