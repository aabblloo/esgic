{% extends 'base.html.twig' %}

{% block title %}
    {{ titre }}
{% endblock %}

{% block titre %}
    {{ titre }}
{% endblock %}

{% block body %}
    <div class="breadcrumb">
        <a class="btn btn-link" href="{{ path('prof_new') }}">
            <i class="fa  fa-user-astronaut"></i>
            Ajouter un professeur
        </a>
    </div>

    <table class="table table-striped table-hover" id="myTable">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Spécialité</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for prof in professeurs %}
                <tr>
                    <td>{{ prof.prenom }}</td>
                    <td>{{ prof.nom }}</td>
                    <td>{{ prof.specialite }}</td>
                    <td>{{ prof.telephone }}</td>
                    <td>{{ prof.email }}</td>
                    <td nowrap class="text-right">
                        <a href="{{ path('prof_show', {'id': prof.id}) }}" class="btn btn-link py-0">
                            <i class="fa  fa-file-alt"></i>
                            Afficher
                        </a>
                        <a href="{{ path('prof_edit', {'id': prof.id}) }}" class="btn btn-link py-0">
                            <i class="fa  fa-edit"></i>
                            Modifier
                        </a>
                        <a href="{{ path('prof_delete', {'id': prof.id}) }}" class="btn btn-link py-0 text-danger">
                            <i class="fa  fa-trash-alt "></i>
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% else %}
                <caption>Pas d'enregistrement</caption>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            $('#autre').addClass('active');
            $('#prof_index').addClass('active');

            $('#myTable').DataTable({
                order: [],
            });

        });
    </script>
{% endblock %}