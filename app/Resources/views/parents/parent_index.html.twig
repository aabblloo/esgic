{% extends 'base.html.twig' %}
{% block title %}Parent index{% endblock %}
{% block titre %}Liste des Parents d'étudiant∙e{% endblock %}

{% block body %}
    <div class="breadcrumb p-2">
        <a class="btn btn-outline-primary" href="{{ path('parents_new') }}">
            <i class="fas fa-plus"></i>
            Nouveau Parent
        </a>
    </div>

    <table class="table table-striped table-hover" id="myTable">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Mot de passe</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for parent in parents %}
                <tr>
                    <td>{{ parent.prenom }}</td>
                    <td>{{ parent.nom }}</td>
                    <td>{{ parent.telephone }}</td>
                    <td>{{ parent.email }}</td>
                    <td>{{ parent.passwordtext }}</td>
                    <td class="text-right">
                        <form method="post" action="{{ path('parents_delete', {'id': parent.id}) }}"
                              onsubmit="return confirm('Etes-vous sûr de supprimer ce Parent ?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" 
                                   value="{{ csrf_token('delete' ~ parent.id) }}">
                            <a href="{{ path('parents_edit', {'id': parent.id}) }}" class="btn btn-link py-0">
                                <i class="fas fa-edit"></i>
                                Modifier
                            </a>
                            <button class="btn btn-link p-0 text-danger">
                                <i class="fas fa-trash-alt"></i>
                                Supprimer
                            </button>
                            <a href="{{ path('parent_etd_index', {'id': parent.id}) }}" class="btn btn-link py-0">
                                <i class="fas fa-users"></i>
                                Etudiants parrainés
                            </a>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de résultat</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

    <script>
        $(function () {
            $('#admin').addClass('active');
            $('#parent_index').addClass('active');

            $('#myTable').DataTable({
                order: [],
            });
        });
    </script>
{% endblock %}
